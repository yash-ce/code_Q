#include<iostream>
#include<cstdio>
#include<cmath>
using namespace std;
int main()
{
  int t;
  cin>>t;
  while(t--){
    int n, num;
    cin>>n>>num;
    int a[n];
    for(int i=0;i<n;i++){
      cin>>a[i];
    }
    int id = 0;
    int i = 0;
    for(i=0;i<n;i++){
      if(a[i] == num){
        id = i;
        break;
      }
    }
    if(i == n){
      cout<<-1<<endl;
    }
    else{
      cout<<id<<endl;
    }
  }
   return 0;
}

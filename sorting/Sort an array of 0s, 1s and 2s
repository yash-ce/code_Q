void sorting012Array(int a[], int n){
	// Write your code here
  int c1 = 0;
  int c2 = 0;
  int c3 = 0;
  for(int i=0;i<n;i++){
    if(a[i] == 0){
      c1++;
    }
  }
  for(int i=0;i<n;i++){
    if(a[i] == 1){
      c2++;
    }
  }
  for(int i=0;i<n;i++){
    if(a[i] == 2){
      c3++;
    }
  }
  int k =0;
  for(int i=0;i<c1;i++){
    a[k++] = 0;
  }
  for(int i=0;i<c2;i++){
    a[k++] = 1;
  }
  for(int i=0;i<c3;i++){
    a[k++] = 2;
  }
}
